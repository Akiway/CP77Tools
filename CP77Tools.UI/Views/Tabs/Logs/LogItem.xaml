<UserControl x:Class="CP77Tools.UI.Views.Tabs.Logs.LogItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CP77Tools.UI.Views.Tabs.Logs"
             mc:Ignorable="d" Height="75" Width="280">
    <Grid x:Name="BackGround" Background="{DynamicResource MahApps.Brushes.Accent4}" Margin="0,5,0,5">
        <Label x:Name="SenderLabel" Content="Sender" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Separator Margin="0,20,0,0" VerticalAlignment="Top" Height="6"/>
        <TextBlock x:Name="SenderText" HorizontalAlignment="Center" Margin="0,26,0,0" Text="Some Example message here" TextWrapping="Wrap" VerticalAlignment="Top" Height="34" Width="270"/>
        <Label x:Name="CurrentTimeStamp" Content="Sender" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="52,-6,0,0" Width="228" FontSize="10" Height="21" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom"/>

    </Grid>
</UserControl>
