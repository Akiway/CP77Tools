<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CP77Tools.UI.Views.Tabs.Archive"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" xmlns:Commands="clr-namespace:CP77Tools.Commands;assembly=CP77Tools" x:Class="CP77Tools.UI.Views.Tabs.Archive.CustomTab"
             mc:Ignorable="d" 
            d:DesignHeight="700" d:DesignWidth="1100">
    <Grid>

        <Grid Background="{DynamicResource MahApps.Brushes.Menu.Background}" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Button x:Name="ArchiveSelectInputButton" Content="Select Input" Margin="5,19,0,0" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top" Width="94" Click="ArchiveSelectInputButton_Click"/>

            <Button x:Name="ArchiveSelectOutpathButton" Content="Select OutPath" Canvas.Left="10" Canvas.Top="42" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,52,0,0" Click="ArchiveSelectOutpathButton_Click"/>





            <Label x:Name="ArchiveOutpathLabel" Content="None Selected" Margin="104,52,0,0" Height="27" VerticalAlignment="Top" Background="{x:Null}" MinWidth="350" BorderBrush="White"/>
            <Label x:Name="ArchiveInputLabel" Content="None Selected" Margin="104,19,0,0" Height="27" VerticalAlignment="Top" Background="{x:Null}" MinWidth="350" BorderBrush="White"/>
            <Grid Margin="149,101,1,0" VerticalAlignment="Top">

                <mah:ToggleSwitch x:Name="ArchiveExtractSwitch" Header="Extract" Height="70" Width="100" Margin="5,5,0,0" Canvas.Left="125" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="14" Toggled="ArchiveExtractSwitch_Toggled"/>
                <mah:ToggleSwitch x:Name="ArchiveDumpSwitch" Header="Dump" Height="70" Width="100" Margin="110,5,0,0" Canvas.Left="20" VerticalAlignment="Top" FontSize="14" Toggled="ArchiveDumpSwitch_Toggled"/>
                <mah:ToggleSwitch x:Name="ArchiveListSwitch" Header="List" Height="70" Width="100" Canvas.Left="340" Canvas.Top="5" Margin="215,5,0,0" VerticalAlignment="Top" FontSize="14" Toggled="ArchiveListSwitch_Toggled"/>
                <mah:ToggleSwitch x:Name="ArchiveUncookSwitch" Header="Uncook" Height="70" Width="100" Canvas.Left="235" Canvas.Top="5" Margin="320,5,0,0" VerticalAlignment="Top" FontSize="14" Toggled="ArchiveUncookSwitch_Toggled"/>
            </Grid>
            <Grid Margin="145,200,0,0" VerticalAlignment="Top" Height="40">
                <RadioButton x:Name="ArchiveJPEGRadioButton"   Content=".jpeg" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="57"  Height="28" Margin="122,0,0,0" Checked="ArchiveJPEGRadioButton_Checked"/>
                <RadioButton x:Name="ArchiveJPGRadioButton"   Content=".jpg" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="52"  Height="26" Margin="184,0,0,0" Checked="ArchiveJPGRadioButton_Checked"/>
                <RadioButton x:Name="ArchiveBMPRadioButton"   Content=".bmp" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="55" Height="27" Margin="301,0,0,0" Checked="ArchiveBMPRadioButton_Checked"/>
                <RadioButton x:Name="ArchivePNGRadioButton"   Content=".png" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="55"  Height="26" Margin="241,0,0,0" Checked="ArchivePNGRadioButton_Checked"/>
                <RadioButton x:Name="ArchiveDDSRadioButton"   Content=".dds" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="53"  Height="27" Margin="64,0,0,0" Checked="ArchiveDDSRadioButton_Checked"/>
                <RadioButton x:Name="ArchiveTGARadioButton"   Content=".tga" HorizontalAlignment="Left" VerticalAlignment="Center" Width="49" IsChecked="True" Height="27" Margin="10,0,0,0" Checked="ArchiveTGARadioButton_Checked"/>
            </Grid>
            <GroupBox Grid.Column="1" Header="Task Concept" Margin="5,11,0,0">
                <Grid>
                    <DataGrid x:Name="ArchiveTaskConceptGrid" AutoGenerateColumns="False" Margin="0,4,0,41" SelectionMode="Single" SelectionUnit="Cell" CanUserDeleteRows="False" CanUserResizeRows="False" RowDetailsVisibilityMode="Collapsed">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Setting" Binding="{Binding Key}" />
                            <DataGridTextColumn Header="Value" Binding="{Binding Value}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="ArchiveLaunchTaskButton" Content="Launch Task" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="26" Width="135" Click="ArchiveLaunchTaskButton_Click"/>
                    <Label Content="Selected Input" HorizontalAlignment="Left" Margin="10,0,0,31" VerticalAlignment="Bottom" FontWeight="Bold"/>
                    <ComboBox x:Name="ArchiveSelectedInputConceptDropDown1" Margin="112,0,0,29" VerticalAlignment="Bottom" IsReadOnly="False" StaysOpenOnEdit="True" SelectedIndex="0"/>


                </Grid>

            </GroupBox>
            <Label Content="General Options" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalContentAlignment="Right" Width="134" VerticalContentAlignment="Center" Height="40"/>
            <Label Content="Uncook File Extension" HorizontalAlignment="Left" Margin="5,200,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalContentAlignment="Right" Width="139" Height="40" VerticalContentAlignment="Center"/>
            <TextBox x:Name="ArchivePatternTextBox" Margin="155,280,0,0" Text="Enter Patern" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" MinWidth="350" TextChanged="ArchivePatternTextBox_TextChanged"/>
            <TextBox x:Name="ArchiveRegexTextBox" Margin="155,357,0,0" Text="Enter Regex" TextWrapping="Wrap" VerticalAlignment="Top" MinWidth="350" TextChanged="ArchiveRegexTextBox_TextChanged"/>
            <Label Content="Pattern" HorizontalAlignment="Left" Margin="15,273,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalContentAlignment="Right" Width="129" Height="40" VerticalContentAlignment="Center"/>
            <Label Content="Regex" HorizontalAlignment="Left" Margin="15,350,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalContentAlignment="Right" Width="129" Height="40" VerticalContentAlignment="Center"/>
            <Separator HorizontalAlignment="Stretch" Margin="0,77,0,0" VerticalAlignment="Top" Height="19" RenderTransformOrigin="0.5,0.5" MinWidth="550">
                <Separator.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Separator.RenderTransform>
            </Separator>
            <Separator RenderTransformOrigin="0.5,0.5" Margin="144,87,0,0" MinWidth="0" HorizontalAlignment="Left"  VerticalContentAlignment="Stretch" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Width="1" MinHeight="300" Visibility="Hidden">

                <Separator.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Separator.RenderTransform>
            </Separator>
            <Separator HorizontalAlignment="Stretch" Margin="0,-19,0,0" VerticalAlignment="Top" Height="60" RenderTransformOrigin="0.5,0.5" MinWidth="329" HorizontalContentAlignment="Stretch">
                <Separator.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Separator.RenderTransform>
            </Separator>
            <Separator RenderTransformOrigin="0.5,0.5" Margin="145,350,0,0" MinWidth="0"  VerticalContentAlignment="Stretch" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" MinHeight="40" Width="1" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top">

                <Separator.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Separator.RenderTransform>
            </Separator>
            <Separator RenderTransformOrigin="0.5,0.5" Margin="145,273,0,0" MinWidth="0"  VerticalContentAlignment="Stretch" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" MinHeight="40" Width="1" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top">

                <Separator.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Separator.RenderTransform>
            </Separator>
            <Separator RenderTransformOrigin="0.5,0.5" Margin="145,200,0,0" MinWidth="0"  VerticalContentAlignment="Stretch" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" MinHeight="40" Width="1" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top">

                <Separator.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Separator.RenderTransform>
            </Separator>
            <Separator RenderTransformOrigin="0.5,0.5" Margin="145,125,0,0" MinWidth="0"  VerticalContentAlignment="Stretch" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" MinHeight="40" Width="1" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top">

                <Separator.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Separator.RenderTransform>
            </Separator>
            <ComboBox x:Name="ArchivePresetComboBox" Margin="155,417,0,0" VerticalAlignment="Top" MinWidth="330" SelectionChanged="ArchivePresetComboBox_SelectionChanged"/>
            <Separator RenderTransformOrigin="0.5,0.5" Margin="145,425,0,0" MinWidth="0"  VerticalContentAlignment="Stretch" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" MinHeight="40" Width="1" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top">

                <Separator.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Separator.RenderTransform>
            </Separator>
            <Label Content="Preset" HorizontalAlignment="Left" Margin="15,425,0,0" VerticalAlignment="Top" FontWeight="Bold" HorizontalContentAlignment="Right" Width="129" Height="40" VerticalContentAlignment="Center"/>
            <TextBox x:Name="ArchivePresetNameTextBox" Margin="155,448,190,0" Text="Preset Name" TextWrapping="Wrap" VerticalAlignment="Top" MinWidth="200" TextChanged="ArchivePresetNameTextBox_TextChanged"/>
            <Button x:Name="ArchiveSavePresetButton" Content="Save Preset" HorizontalAlignment="Right" Margin="0,447,110,0" VerticalAlignment="Top" Click="ArchiveSavePresetButton_Click"/>
            <Button x:Name="ArchiveDeleteSelectedPresetButton" Content="Delete Selected" HorizontalAlignment="Right" Margin="0,447,0,0" VerticalAlignment="Top" Width="105" Click="ArchiveDeleteSelectedPresetButton_Click"/>




        </Grid>

    </Grid>
</UserControl>
