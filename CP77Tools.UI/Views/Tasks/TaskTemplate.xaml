<UserControl x:Class="CP77Tools.UI.Views.Tasks.TaskTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CP77Tools.UI"
             mc:Ignorable="d" 
            d:DesignHeight="700" d:DesignWidth="1100">
    <Grid Background="{DynamicResource MahApps.Brushes.ThemeBackground}">
        <Label x:Name="TaskTitleLabel" Content="Task : " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ScrollViewer x:Name="ScrollViewerTaskLog" Margin="10,41,445,70" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <WrapPanel x:Name="TaskLogWrap" HorizontalAlignment="Stretch" Orientation="Vertical" SizeChanged="TaskLogWrap_SizeChanged" VerticalAlignment="Stretch"/>
        </ScrollViewer>
        <GroupBox x:Name="TaskFinalGroup" Header="Task Concept" Margin="0,11,10,70" HorizontalAlignment="Right" Width="430">
            <Grid>
                <DataGrid x:Name="ArchiveTaskConceptGrid" AutoGenerateColumns="False" Margin="0,4,0,41" SelectionMode="Single" SelectionUnit="Cell" CanUserDeleteRows="False" CanUserResizeRows="False" RowDetailsVisibilityMode="Collapsed">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Setting" Binding="{Binding Key}" />
                        <DataGridTextColumn Header="Value" Binding="{Binding Value}" />
                    </DataGrid.Columns>
                </DataGrid>
                <Label Content="Selected Input" HorizontalAlignment="Left" Margin="10,0,0,31" VerticalAlignment="Bottom" FontWeight="Bold"/>
                <ComboBox x:Name="ArchiveSelectedInputConceptDropDown1" Margin="112,0,0,29" VerticalAlignment="Bottom" IsReadOnly="False" StaysOpenOnEdit="True" SelectedIndex="0"/>


            </Grid>

        </GroupBox>

    </Grid>
</UserControl>
