<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CP77Tools.UI.Views.Pages"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="CP77Tools.UI.Views.Pages.SettingsPage"
      mc:Ignorable="d" 
     d:DesignHeight="700" d:DesignWidth="1100"
    Title="SettingsPage">

    <Grid>
        <Grid Background="{DynamicResource MahApps.Brushes.Menu.Background}" >
            <Label Content="Settings" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <mah:ToggleSwitch x:Name="ThemeDarkLightToggle" Header="Theme" Height="100" Margin="30,50,0,0" VerticalAlignment="Top" Width="100" OffContent="Dark" OnContent="Light" Toggled="ThemeDarkLightToggle_Toggled"/>
            <Separator Margin="0,30,0,0" VerticalAlignment="Top" Height="15"/>
            <ComboBox x:Name="AccentBox" HorizontalAlignment="Left" Margin="160,74,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="AccentBox_SelectionChanged"/>
            <Label Content="Accent" HorizontalAlignment="Left" Margin="160,48,0,0" VerticalAlignment="Top" FontSize="14"/>
        </Grid>

    </Grid>
</Page>
