<Page x:Class="CP77Tools.UI.Views.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CP77Tools.UI.Views.Pages"
      mc:Ignorable="d" 
     d:DesignHeight="700" d:DesignWidth="1100"      Title="AboutPage">

    <Grid>
        <Grid Margin="10,10,10,0">
            <TextBlock x:Name="AboutTextBlock" TextWrapping="Wrap" Text="teat" Margin="10,50,10,10" Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}" TextAlignment="Center"/>

            <Label Content="About" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Separator Margin="0,30,0,0" VerticalAlignment="Top" Height="15"/>
            <Image HorizontalAlignment="Center" Height="86" Margin="0,344,0,0" VerticalAlignment="Top" Width="232" Source="/Resources/Logo.png"/>

        </Grid>

    </Grid>
</Page>
