<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <StartupObject>CP77Tools.UI.App</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Fonts\Cyberpunk.ttf" />
    <None Remove="lib\kraken.dll" />
    <None Remove="lib\kraken.so" />
    <None Remove="Resources\Close.png" />
    <None Remove="Resources\CloseSelected.png" />
    <None Remove="Resources\Logo.png" />
    <None Remove="Resources\Minimize.png" />
    <None Remove="Resources\MinimizeSelected.png" />
    <None Remove="Resources\PageMove.png" />
    <None Remove="Resources\PageMoveSelected.png" />
    <None Remove="Resources\PanelShape.png" />
    <None Remove="Resources\PanelShape_V3.png" />
    <None Remove="Resources\TopHeader.png" />
    <None Remove="TopHeader" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="lib\kraken.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="lib\kraken.so">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FluentWPF" Version="0.8.0" />
    <PackageReference Include="WindowsAPICodePack-Shell" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CP77Tools\CP77Tools.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Fonts\Cyberpunk.ttf">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Close.png" />
    <Resource Include="Resources\CloseSelected.png" />
    <Resource Include="Resources\Logo.png" />
    <Resource Include="Resources\Minimize.png" />
    <Resource Include="Resources\MinimizeSelected.png" />
    <Resource Include="Resources\PageMove.png" />
    <Resource Include="Resources\PageMoveSelected.png" />
    <Resource Include="Resources\PanelShape.png" />
    <Resource Include="Resources\PanelShape_V3.png" />
    <Resource Include="Resources\TopHeader.png" />
  </ItemGroup>

</Project>
